# Database Configuration
# MySQL connection string format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:password@localhost:3306/lumos_db"

# JWT Secrets (generate with: openssl rand -base64 32)
# IMPORTANT: Use different secrets for access and refresh tokens
JWT_ACCESS_SECRET="your-access-secret-here"
JWT_REFRESH_SECRET="your-refresh-secret-here"

# Application Configuration
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS and email links)
FRONTEND_URL="http://localhost:3000"

# Email Configuration (Optional - uses console.log in development)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="Lumos <noreply@lumos.com>"

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=60

# Account Lockout
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MS=1800000

# Token Expiry
ACCESS_TOKEN_EXPIRY="15m"
REFRESH_TOKEN_EXPIRY="7d"
